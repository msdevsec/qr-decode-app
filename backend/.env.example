# Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0
API_VERSION=v1

# Security
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=10
COOKIE_SECRET=your_cookie_secret_here

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/qrdecode?schema=public
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=qrdecode
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=5
RATE_LIMIT_WINDOW=86400 # 24 hours in seconds
RATE_LIMIT_SKIP_FAILED=true

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_LOGGING=true

# API Documentation
ENABLE_SWAGGER=true
SWAGGER_ROUTE=/api-docs

# Error Handling
SHOW_STACK_TRACE=true
SANITIZE_ERROR_MESSAGES=true

# Testing
TEST_JWT_SECRET=test_jwt_secret
TEST_DATABASE_URL=postgresql://postgres:postgres@postgres:5432/qrdecode_test?schema=public

# Premium Features (for future use)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
PREMIUM_SCAN_LIMIT=100

# Email Service (for future use)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
EMAIL_FROM=noreply@qrdecode.ai
